<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= beer.name %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= link_to beer.brewery.name, beer.brewery %>
  </p>

  <p>
    <% if beer.ratings.empty?%>
    Beer has not yet been rated!
    <% else %>
    <% ratings = beer.ratings %>
    Beer has <%= ratings.size %> ratings with an average score: <%= ratings.sum(&:score).to_f / ratings.size %>
    <% end %>
  </p>
</div>